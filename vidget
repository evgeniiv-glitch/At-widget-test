  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Онлайн запись Altegio</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin-top: 100px;
    }

    #open-widget {
      background-color: #ff4b5c;
      color: white;
      border: none;
      padding: 15px 30px;
      font-size: 18px;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.3s;
    }

    #open-widget:hover {
      background-color: #e04152;
    }
  </style>
</head>
<body>
  <h1>Онлайн запись</h1>
  <button id="open-widget">Записаться онлайн</button>

  <script>
    document.getElementById('open-widget').addEventListener('click', function() {
      // Проверяем, не добавлен ли уже скрипт, чтобы не загружать повторно
      if (!document.getElementById('altegio-widget-script')) {
        const script = document.createElement('script');
        script.id = 'altegio-widget-script';
        script.type = 'text/javascript';
        script.src = 'https://w1385634.alteg.io/widgetJS';
        script.charset = 'UTF-8';
        document.body.appendChild(script);
      } else {
        // Если скрипт уже загружен, просто открываем виджет
        if (typeof AltegioWidget !== 'undefined') {
          AltegioWidget.open();
        }
      }
    });
  </script>
</body>
</html>
